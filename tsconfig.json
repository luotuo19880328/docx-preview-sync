{
  "compilerOptions": {
    "module": "ES2022",
    "declaration": false,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "pretty": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "importHelpers": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "dist",
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
